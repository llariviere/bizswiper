<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bizswiper.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bizswiper</name>
    <description>
        Business card exchange app
    </description>
    <author email="bizswiper@gmail.com" href="https://bizswiper.com">
        Bizswiper Team
    </author>
    <content src="index.html" />
    <access origin="https://bizswiper.com/" />
    <allow-navigation href="https://*.bizswiper.com/*" />
    <preference name="Orientation" value="portrait" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="img/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="android-minSdkVersion" value="15" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.5.4" />
    <engine name="android" spec="~7.0.0" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova-plugin-device" spec="~1.1.7" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-file" spec="~4.3.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
</widget>
